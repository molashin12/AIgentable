# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/aigentable"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=aigentable_vectors

# AI Provider Configuration
DEFAULT_AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_EMBEDDING_MODEL=embedding-001

# WhatsApp Configuration
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# Facebook Configuration
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_VERIFY_TOKEN=your-facebook-verify-token

# Instagram Configuration
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,csv,json,html,md
UPLOAD_DESTINATION=uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@aigentable.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Google Cloud Platform (Optional)
GCP_PROJECT_ID=your-gcp-project-id
GCP_KEY_FILE=path/to/service-account-key.json

# Monitoring (Optional)
MONITORING_ENABLED=false
MONITORING_ENDPOINT=http://localhost:9090

# Feature Flags
FEATURE_REAL_TIME_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_FILE_UPLOAD_ENABLED=true